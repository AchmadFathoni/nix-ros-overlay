    name = "0.23.0-1.tar.gz";
    sha256 = "f0f0b99bfe0e3f509803630db07bf13e99f93971f9729fb03cddcf19323c6d1c";
  };

  buildType = "ament_cmake";
  buildInputs = [ ament-cmake ];
  propagatedBuildInputs = [ sqlite ];
